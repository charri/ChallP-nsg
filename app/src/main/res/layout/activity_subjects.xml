<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Toolbar
        android:title="@string/activity_subjects"
        android:subtitle="@string/app_name"
        android:id="@+id/toolbar"
        style="@style/ActionBar"
        android:background="@color/red"
        android:animateLayoutChanges="true"
        >
        <TextView
            android:id="@+id/btnNext"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="@string/action_next"
            style="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textColor="@android:color/white"
            android:drawablePadding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical|right"
            />
        </Toolbar>


<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="135dp"
        android:id="@+id/recyler_cards" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_card"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        card_view:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/container"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content" android:orientation="vertical">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:id="@+id/hideable"
                android:layout_height="wrap_content">

                <android.widget.IconTextView
                    android:text="{fa-info-circle}"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/info_icon"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/title"
                    android:layout_toLeftOf="@id/info_icon"
                    android:text="@string/subject_info_card_title"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    style="@android:style/TextAppearance.Material.Small"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/info_title"
                    android:layout_below="@id/title"
                    android:text="@string/subject_info_card_info"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/info_title"
                    android:id="@+id/divider"
                    android:background="@android:color/darker_gray" />


            </RelativeLayout>
            <TextView
                android:layout_below="@id/divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/subject_info_card_selected"
                android:id="@+id/subject_info_card_selected"
                android:textColor="@android:color/primary_text_light"
                style="@android:style/TextAppearance.Material.Medium"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
</LinearLayout>